<aside class=" h-1 md:block hidden flex justify-center" style="min-height: 500px; width:300px">
    <div class="flex flex-col w-full">
        <div class="w-full h-42  mb-3">
            <% if(!user) { %>
            <div class="p-3 bg-slate-100 border-[4px] rounded-md border-slate-700">
                <h2 class="flex justify-center items-center text-slate-600">커뮤니티 - Project Nest</h2>
                <a href="<%=STATIC_URL%>/user/login">
                    <button type="button" class="w-full h-11 bg-gray-800 text-gray-300 my-2 font-bold border-gray-300 border rounded-md">로그인</button>
                </a>
                <div class="flex justify-between text-xs text-slate-500">
                    <a href="user/find" class="tracking-tighter hover:text-slate-900">
                        아이디/비밀번호 찾기
                    </a>
                    <a href="user/join" class=" hover:text-slate-900">
                        회원가입
                    </a>
                </div>
            </div>
            <% }else{ %>
                <div class="h-40  flex flex-col bg-slate-200 border-[4px] rounded-md border-slate-700 justify-start">
                    <div class="flex flex-row h-4/6 items-start border-b border-b-slate-900 pb-2 bg-white pt-3">
                        <span class="w-2/5 text-center h-full flex items-center">
                            <div class="w-16 border rounded-full h-16 m-auto">

                            </div>
                        </span>
                        <span class="w-3/5 text-left flex flex-col h-full">
                            <a href="<%=STATIC_URL%>/user/mypage" alt="mypage" class="hover:text-slate-900 text-slate-700">
                               <%=user.user_name%>
                            </a>
                            <a href="<%=STATIC_URL%>/user/mypage" alt="mypage" class="hover:text-violet-900 text-violet-800 mb-1">
                                <%=user.user_email%>
                            </a>
                            <a href="<%=STATIC_URL%>/logout" class="flex items-center px-2 w-20 rounded-2xl h-7 al justify-center border border-slate-700 bg-slate-800 text-slate-300 text-sm">
                                로그아웃
                            </a>
                        </span>
                    </div>
                    <div class="flex flex-row h-2/6 post">
                        <a class="w-1/3 flex justify-center items-center text-slate-500 font-semibold tracking-widest  border-r-slate-500 border-r cursor-pointer">
                            마이
                        </a>
                        <a class="w-1/3 flex justify-center items-center text-slate-500 font-semibold tracking-widest  border-r-slate-500 border-r cursor-pointer">
                            출석
                        </a>
                        <a class="w-1/3 flex justify-center items-center text-slate-500 font-semibold tracking-widest  cursor-pointer">
                            알림
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
        <div class="w-full h-64 border-4 border-amber-900 mb-3">
            <div class="w-full h-10 border-b border-b-slate-900"></div>
        </div>
    </div>
</aside>