<aside class=" h-1 md:block hidden flex justify-center" style="min-height: 500px; width:300px">
    <div class="flex flex-col w-full">
        <div class="w-full h-42 border border-amber-900 mb-3">
            <% if(!user) { %>
            <form name='login_box' method="post" action="<%=render_data.STATIC_URL%>auth/login" class="p-3">
                <input type="text" name="user_id" class="h-9 w-full border mb-3 border-gray-500 rounded pl-2" placeholder="아이디">
                <input type="password" name="user_password" class="h-9 w-full border border-gray-500 rounded pl-2" placeholder="패스워드">
                <button type="submit" class="w-full h-11 bg-gray-800 text-gray-300 mt-4 font-bold border-gray-300 border rounded-2xl">로그인</button>
            </form>
            <% }else{ %>
                <div class="h-40  flex flex-col pt-3">
                    <div class="flex flex-row h-4/6 items-start border-b border-b-slate-900 pb-2">
                        <span class="w-2/5 text-center h-full flex items-center">
                            <div class="w-16 border rounded-full h-16 m-auto">

                            </div>
                        </span>
                        <span class="w-3/5 text-left flex flex-col h-full">
                            <a href="<%=STATIC_URL%>/user/mypage" alt="mypage" class="hover:text-slate-900 text-slate-700">
                               <%=user.user_name%>
                            </a>
                            <a href="<%=STATIC_URL%>/user/mypage" alt="mypage" class="hover:text-violet-900 text-violet-800 mb-1">
                                <%=user.user_email%>
                            </a>
                            <a href="<%=STATIC_URL%>/logout" class="flex items-center px-2 w-20 rounded-2xl h-7 al justify-center border border-slate-700 bg-slate-800 text-slate-300 text-sm">
                                로그아웃
                            </a>
                        </span>
                    </div>
                    <div class="flex flex-row h-2/6">
                        <a class="w-1/3 flex justify-center items-center bg-slate-800 text-slate-300 border-r-slate-500 border-r-2 cursor-pointer">
                            마이
                        </a>
                        <a class="w-1/3 flex justify-center items-center bg-slate-800 text-slate-300 border-r-slate-500 border-r-2 cursor-pointer">
                            출석
                        </a>
                        <a class="w-1/3 flex justify-center items-center bg-slate-800 text-slate-300 cursor-pointer">
                            알림
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
        <div class="w-full h-64 border border-amber-900 mb-3">
            글 리스트
        </div>
    </div>
</aside>