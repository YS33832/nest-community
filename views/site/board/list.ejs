<%
    board = render_data.board;
    posts = board.posts;

%>
<div class="w-full h-[200px] border border-slate-700 mb-5">

</div>
<div class="flex flex-col">
    <h1 class="text-2xl font-sans-kr font-semibold tracking-widest mb-3"> 자유게시판 </h1>
    <div class="h-[60px] border-2 border-slate-300 rounded-xl flex justify-between px-3 mb-3">
        <div class="flex items-center">
            <a href="javascript:l" class="mr-3 h-full border-r-2 border-r-slate-300 pt-3 pr-3 pl-1">
                <i class="xi-home text-3xl text-slate-500"></i>
            </a>
            <a href="javascript:;" class="font-semibold text-slate-500 mr-3">
                최신순
            </a>
            <a href="javascript:;" class="font-semibold text-slate-500 mr-3">
                인기순
            </a>
            <a href="javascript:;" class="font-semibold text-slate-500 mr-3">
                댓글순
            </a>
        </div>
        <div class="flex items-center">
            <a href="javascript:;">
                <i class="xi-star-o text-yellow-400 text-3xl pr-1"></i>
            </a>
        </div>
    </div>
    <div class="flex flex-col justify-start mb-3">
        <div class="flex h-[40px] border-y-2 border-b border-y-slate-400 items-center bg-slate-100">
            <span class="w-[10%] text-center">분류</span>
            <span class="w-[60%] text-center">제목</span>
            <span class="w-[10%] text-center">작성자</span>
            <span class="w-[10%] text-center">날짜</span>
            <span class="w-[10%] text-center">조회</span>
        </div>
        <% posts.forEach((post) =>{ %>
        <% postTime = getYmdHis(post.createdAt).substring(10)  %>
            <div class="flex h-[35px] items-center border-b border-b-slate-400">
                <span class="w-[10%] text-center text-slate-700"><%=post.board_table%>></span>
                <span class="w-[60%] text-left text-slate-700"><%=post.subject%></span>
                <span class="w-[10%] text-center text-slate-700"><%=post.user_id%></span>
                <span class="w-[10%] text-center text-slate-700"><%=postTime%></span>
                <span class="w-[10%] text-center text-violet-800 font-semibold"><%=post.view_count%></span>
            </div>
        <%  }) %>
    </div>

    <div class="flex items-center justify-end mb-3">
        <a href="<%=STATIC_URL%>/board/<%=m2%>/write" class="btn-primary px-3 py-1.5">
            글쓰기
        </a>
    </div>
    <div class="h-[40px] flex items-center justify-center mb-3">
        <div class="w-[340px] relative flex">
            <input type="text" name="search" class="input-basic w-[250px] h-[35px] border-slate-300" placeholder="검색">
            <div class="w-[80px] border-2 border-slate-300 ml-[10px] flex items-center text-slate-600 px-2 relative cursor-pointer" onclick="search_option(this)">
                <a href="javascript:;" id="search_opt_res">제목</a>
                <i class="xi-caret-down absolute right-[5px] top-[8px]"></i>
                <ul class="absolute top-[33px] left-[-2px] border-x-2 border-slate-300 border-b-2 hidden" id="search-option">
                    <li class="w-[76px]  h-[35px] flex items-center text-slate-600 px-2 hover:bg-slate-700 hover:text-slate-50" onclick="search_opt_check(this)">제목</li>
                    <li class="w-[76px]  h-[35px] flex items-center text-slate-600 px-2 hover:bg-slate-700 hover:text-slate-50" onclick="search_opt_check(this)">내용</li>
                    <li class="w-[76px]  h-[35px] flex items-center text-slate-600 px-2 hover:bg-slate-700 hover:text-slate-50" onclick="search_opt_check(this)">글쓴이</li>
                </ul>
            </div>
            <i class="xi-search absolute right-[100px] top-[5px] text-slate-500 font-semibold text-xl"></i>
        </div>
    </div>
    <div class="h-[40px] flex items-center justify-center">
        페이징
    </div>
</div>